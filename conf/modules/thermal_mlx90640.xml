<!DOCTYPE module SYSTEM "module.dtd">
<module name="thermal_mlx90640" dir="sensors" task="default">
  <doc>
    <description>Module for the MLX90640 themal IR sensor from Melexis.</description>
  </doc>
  <dep>
    <depends>i2c</depends>
  </dep>
  <header>
    <file name="thermal_mlx90640.h"/>
  </header>
  <init fun="thermal_mlx90640_init()"/>
  <periodic fun="thermal_mlx90640_periodic()" freq="5"/>
  <event fun="thermal_mlx90640_event()"/>
  <makefile target="ap">
    <configure name="MLX90640_I2C_DEV" default="i2c0" case="upper|lower"/>
    <configure name="MLX90640_I2C_SLAVE_ADDR" default="0x66"/>

    <define name="USE_$(MLX90640_I2C_DEV_UPPER)"/>
    <define name="MLX90640_I2C_DEV" value="$(MLX90640_I2C_DEV_LOWER)"/>
    <define name="MLX90640_I2C_SLAVE_ADDR" value="$(MLX90640_I2C_SLAVE_ADDR)"/>

    <file name="thermal_mlx90640.c"/>
    <file name="mlx90640.c" dir="peripherals"/>

    <test/>
  </makefile>
</module>
