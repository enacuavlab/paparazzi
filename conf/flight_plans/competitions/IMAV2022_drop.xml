    <waypoint name = "R3" lat="52.169581" lon="4.421346" />
    <waypoint name = "R4" lat="52.167203" lon="4.415598" />
    <waypoint name = "SEARCH" lat = "52.1683466" lon = "4.4168985"/>
    <waypoint name = "D1" lat = "52.168043" lon = "4.412970"/>
    <waypoint name = "D2" lat = "52.171484" lon = "4.423171"/>
    <waypoint name = "D3" lat = "52.170171" lon = "4.423786"/>
    <waypoint name = "D4" lat = "52.166332" lon = "4.415778"/>
    <waypoint name = "D5" lat = "52.167008" lon = "4.413522" />
    <waypoint name = "TRUCK" lat = "52.171626" lon="4.417294" />
    <waypoint name = "_T1" lat = "52.171974" lon = "4.417091" />
    <waypoint name = "_T2" lat = "52.171345" lon = "4.417542" />
    <waypoint name = "_T3" lat = "52.171776" lon = "4.419102" />
    <waypoint name = "_T4" lat = "52.172411" lon = "4.418629" />
    <waypoint name="_FLY1" lat = "52.171802" lon = "4.416334"/>
    <waypoint name="_FLY2" lat = "52.171304" lon = "4.416656"/>
