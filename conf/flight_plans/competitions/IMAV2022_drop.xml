    <waypoint name = "UNK_TAG" lat = "52.170271" lon = "4.414617"/>
    <waypoint name = "AREA_TAG" lat = "52.168736" lon = "4.414774"/>
    <waypoint name = "P1" lat = "52.169221" lon = "4.415347" />
    <waypoint name = "P2" lat = "52.171357" lon = "4.421790" />
    <waypoint name = "R1" lat="52.167796" lon="4.414780" />
