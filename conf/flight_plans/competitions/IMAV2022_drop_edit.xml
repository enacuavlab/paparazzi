<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="190" ground_alt="185" lat0="52.171490" lon0="4.417461" max_dist_from_home="150" name="Delft safety" security_height="1">
  <header>
    #ifndef SwitchServoOff
    #define SwitchServoOff(_x) {}
    #endif
    #define DROP_NONE     0
    #define DROP_DELIVERY 1
    #define DROP_UNKNOWN  2
    #define DROP_SEARCH   3
    #define DROP_SILENT   4
    #define DROP_TRUCK    5
</header>
  <waypoints>
    <waypoint lat="52.170448" lon="4.418138" name="HOME"/>
