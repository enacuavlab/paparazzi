    </sector>
    <sector color="red" name="Kill">
      <corner name="_KILL1"/>
      <corner name="_KILL2"/>
      <corner name="_KILL3"/>
      <corner name="_KILL4"/>
      <corner name="_KILL5"/>
      <corner name="_KILL6"/>
      <corner name="_KILL7"/>
    </sector>
  </sectors>
  <variables>
    <variable init="0" type="int" var="mission_nb"/>
    <variable init="6." max="15." min="0.5" step="0.1" var="goto_height"/>
    <variable init="1.5" max="15." min="0.5" step="0.1" var="drop_height"/>
    <variable init="4.5" max="15." min="0.5" step="0.1" var="search_height"/>
    <variable init="100." max="150." min="20" step="1.0" var="search_radius"/>
    <variable init="8." max="20." min="5." step="0.1" var="search_sweep"/>
    <variable init="5." max="10." min="0.5" step="0.1" var="goto_speed"/>
    <variable init="2.5" max="10." min="0.5" step="0.1" var="search_speed"/>
    <variable init="42." var="tag_distance"/>
    <variable init="false" type="bool" var="tag_valid"/>
    <abi_binding handler="fp_tag_cb" name="JEVOIS_MSG"/>
  </variables>
  <modules>
    <module name="nav" type="survey_poly_rotorcraft"/>
    <module name="tag_tracking">
      <define name="TAG_TRACKING_SIM_WP" value="WP_DELIVERY"/>
    </module>
  </modules>
  <exceptions>
    <exception cond="(!InsideFlight_Area(GetPosX(), GetPosY()) @OR GetPosAlt() @GT GetAltRef() + 50) 
    @AND (nav_block @GT IndexOfBlock('Standby')) @AND (nav_block @LT IndexOfBlock('Kill landed'))" deroute="Standby"/>
  </exceptions>
  <blocks>
    <block name="Wait GPS">
      <call_once fun="NavKillThrottle()"/>
      <call_once fun="DropOpen()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
    </block>
    <block name="Holding point">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call_once fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="GetPosHeight() @GT 3. @AND mission_nb == DROP_NONE" deroute="Standby"/>
      <exception cond="GetPosHeight() @GT 3. @AND mission_nb == DROP_DELIVERY" deroute="Goto Delivery"/>
      <exception cond="GetPosHeight() @GT 3. @AND mission_nb == DROP_SILENT" deroute="Goto Silent"/>
      <exception cond="GetPosHeight() @GT 3. @AND mission_nb == DROP_UNKNOWN" deroute="Goto Unknown"/>
      <exception cond="GetPosHeight() @GT 3. @AND mission_nb == DROP_AREA" deroute="Goto Area"/>
      <exception cond="GetPosHeight() @GT 3. @AND mission_nb == SEARCH_UNK" deroute="Run Search Unknown"/>
      <exception cond="GetPosHeight() @GT 3. @AND mission_nb == SEARCH_AREA" deroute="Start Search Area"/>
      <call_once fun="ins_reset_vertical_pos()"/>
      <call_once fun="DropClose()"/>
      <call_once fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0.1" until="stage_time @GT 2" vmode="throttle"/>
      <call_once fun="NavSetWaypointHere(WP_LANDPAD)"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="LANDPAD"/>
    </block>
    <block name="Standby" pre_call="if(!InsideKill(GetPosX(), GetPosY())) NavKillThrottle();" strip_button="Standby" strip_icon="home.png">
      <set value="DROP_NONE" var="mission_nb"/>
      <call_once fun="guidance_h_SetMaxSpeed(search_speed)"/>
      <stay wp="STDBY"/>
    </block>
    <block group="mission" name="Start Delivery" strip_button="Drop Delivery">
      <set value="DROP_DELIVERY" var="mission_nb"/>
      <deroute block="Takeoff"/>
    </block>
    <block group="mission" name="Start Silent" strip_button="Drop Silent">
      <set value="DROP_SILENT" var="mission_nb"/>
      <deroute block="Takeoff"/>
    </block>
    <block group="mission" name="Start Unknown" strip_button="Drop Unknown">
      <set value="DROP_UNKNOWN" var="mission_nb"/>
      <deroute block="Takeoff"/>
    </block>
    <block group="mission" name="Start Area" strip_button="Drop Area">
      <set value="DROP_AREA" var="mission_nb"/>
      <deroute block="Takeoff"/>
    </block>
    <block group="search" name="Search Unknown" strip_button="Search Unknown">
      <set value="SEARCH_UNK" var="mission_nb"/>
      <deroute block="Takeoff"/>
    </block>
    <block group="search" name="Search Area" strip_button="Search Area">
      <set value="SEARCH_AREA" var="mission_nb"/>
      <deroute block="Takeoff"/>
    </block>
    <block name="Goto Delivery">
      <set value="DROP_NONE" var="mission_nb"/>
      <call_once fun="NavSetWaypointHere(WP__HERE)"/>
      <call_once fun="jevois_stream(false)"/>
      <call_once fun="guidance_h_SetMaxSpeed(goto_speed)"/>
      <go from="_HERE" height="goto_height" hmode="route" wp="DELIVERY"/>
      <call_once fun="guidance_h_SetMaxSpeed(search_speed)"/>
      <call_once fun="NavSetWaypointHere(WP_TAG)"/>
      <call_once fun="jevois_stream(true)"/>
      <stay height="search_height" until="(tag_tracking.status == TAG_TRACKING_RUNNING) @OR (stage_time @GT 15)" wp="DELIVERY"/>
      <deroute block="Drop Package"/>
    </block>
    <block name="Goto Silent">
      <set value="DROP_NONE" var="mission_nb"/>
      <call_once fun="NavSetWaypointHere(WP__HERE)"/>
      <call_once fun="jevois_stream(false)"/>
      <call_once fun="guidance_h_SetMaxSpeed(goto_speed)"/>
      <go from="_HERE" height="goto_height" hmode="route" wp="SILENT"/>
      <call_once fun="guidance_h_SetMaxSpeed(search_speed)"/>
      <call_once fun="NavSetWaypointHere(WP_TAG)"/>
      <call_once fun="jevois_stream(true)"/>
      <stay height="search_height" until="(tag_tracking.status == TAG_TRACKING_RUNNING) @OR (stage_time @GT 15)" wp="SILENT"/>
      <deroute block="Drop Package"/>
    </block>
    <block name="Goto Unknown">
      <set value="DROP_NONE" var="mission_nb"/>
      <call_once fun="NavSetWaypointHere(WP__HERE)"/>
      <call_once fun="jevois_stream(false)"/>
      <call_once fun="guidance_h_SetMaxSpeed(goto_speed)"/>
      <go from="_HERE" height="goto_height" hmode="route" wp="UNK_TAG"/>
      <call_once fun="guidance_h_SetMaxSpeed(search_speed)"/>
      <call_once fun="NavSetWaypointHere(WP_TAG)"/>
      <call_once fun="jevois_stream(true)"/>
      <stay height="search_height" until="(tag_tracking.status == TAG_TRACKING_RUNNING) @OR (stage_time @GT 15)" wp="UNK_TAG"/>
      <deroute block="Drop Package"/>
    </block>
    <block name="Goto Area">
      <set value="DROP_NONE" var="mission_nb"/>
      <call_once fun="NavSetWaypointHere(WP__HERE)"/>
      <call_once fun="jevois_stream(false)"/>
      <call_once fun="guidance_h_SetMaxSpeed(goto_speed)"/>
      <go from="_HERE" height="goto_height" hmode="route" wp="AREA_TAG"/>
      <call_once fun="guidance_h_SetMaxSpeed(search_speed)"/>
      <call_once fun="NavSetWaypointHere(WP_TAG)"/>
      <call_once fun="jevois_stream(true)"/>
      <stay height="search_height" until="(tag_tracking.status == TAG_TRACKING_RUNNING) @OR (stage_time @GT 15)" wp="AREA_TAG"/>
      <deroute block="Drop Package"/>
    </block>
    <block name="Run Search Unknown">
      <set value="DROP_NONE" var="mission_nb"/>
      <exception cond="tag_tracking.status == TAG_TRACKING_RUNNING" deroute="Drop Package"/>
      <call_once fun="NavSetWaypointHere(WP__HERE)"/>
      <call_once fun="jevois_stream(false)"/>
      <call_once fun="guidance_h_SetMaxSpeed(goto_speed)"/>
      <go from="_HERE" height="goto_height" hmode="route" wp="UNK_CENTER"/>
      <call_once fun="guidance_h_SetMaxSpeed(search_speed)"/>
      <call_once fun="jevois_stream(true)"/>
      <for from="1" to="search_radius/search_sweep" var="i">
        <circle height="search_height" radius="search_sweep*$i" until="NavCircleCount() @GT 1." wp="UNK_CENTER"/>
      </for>
      <deroute block="Land"/>
    </block>
    <block name="Start Search Area">
      <set value="DROP_NONE" var="mission_nb"/>
      <call_once fun="NavSetWaypointHere(WP__HERE)"/>
      <call_once fun="jevois_stream(false)"/>
      <call_once fun="guidance_h_SetMaxSpeed(goto_speed)"/>
      <go from="_HERE" height="goto_height" hmode="route" wp="A1"/>
      <call_once fun="nav_survey_poly_setup_towards(WP_A1, 4, search_sweep, WP_A2)"/>
      <deroute block="Run Search Area"/>
    </block>
    <block name="Run Search Area">
      <exception cond="PolySurveySweepBackNum > 0" deroute="Land"/>
      <call_once fun="jevois_stream(true)"/>
      <call_once fun="guidance_h_SetMaxSpeed(search_speed)"/>
      <call fun="nav_survey_poly_run(search_height)"/>
    </block>
    <block name="Drop Package">
      <stay height="search_height" until="(stage_time @GT 2 @AND tag_tracking.status == TAG_TRACKING_RUNNING) @OR (stage_time @GT 5)" wp="TAG"/>
      <stay climb="-0.5" post_call="tag_valid = false" until="((tag_distance @LT drop_height) @AND tag_valid) @OR (GetPosHeight() @LT drop_height/2.)" vmode="climb" wp="TAG"/>
      <call_once fun="DropOpen()"/>
      <stay height="search_height" until="stage_time @GT 3" wp="TAG"/>
      <deroute block="Land"/>
    </block>
    <block group="land" name="Land here" strip_button="Land here" strip_icon="land-right.png">
      <call_once fun="NavSetWaypointHere(WP_LANDPAD)"/>
    </block>
    <block group="land" name="Land" strip_button="Land on pad">
      <call_once fun="jevois_stream(false)"/>
      <call_once fun="NavSetWaypointHere(WP__HERE)"/>
      <call_once fun="guidance_h_SetMaxSpeed(goto_speed)"/>
      <go from="_HERE" height="goto_height" hmode="route" wp="LANDPAD"/>
    </block>
    <block name="Flare">
      <exception cond="!nav_is_in_flight()" deroute="Kill landed"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="LANDPAD"/>
    </block>
    <block name="Kill landed">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
