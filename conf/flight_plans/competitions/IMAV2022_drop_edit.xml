  <sectors>
    <sector color="purple" name="Truck">
      <corner name="_T1"/>
      <corner name="_T2"/>
      <corner name="_T3"/>
      <corner name="_T4"/>
    </sector>
    <sector color="yellow" name="Search">
      <corner name="A1"/>
      <corner name="A2"/>
      <corner name="A3"/>
      <corner name="A4"/>
    </sector>
    <sector color="green" name="Survey">
      <corner name="_D1"/>
      <corner name="_D2"/>
      <corner name="_D3"/>
      <corner name="_D4"/>
      <corner name="_D5"/>
    </sector>
    <sector color="orange" name="Flight_Area">
      <corner name="_FLY1"/>
      <corner name="_FLY2"/>
      <corner name="_FLY3"/>
      <corner name="_FLY4"/>
      <corner name="_FLY5"/>
      <corner name="_FLY6"/>
