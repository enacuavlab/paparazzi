    <waypoint lat="52.170042" lon="4.424667" name="_FLY6"/>
    <waypoint lat="52.173695" lon="4.423244" name="_FLY7"/>
    <waypoint lat="52.171809" lon="4.416234" name="_KILL1"/>
    <waypoint lat="52.171331" lon="4.416569" name="_KILL2"/>
    <waypoint lat="52.169403" lon="4.410566" name="_KILL3"/>
    <waypoint lat="52.166762" lon="4.412007" name="_KILL4"/>
    <waypoint lat="52.165493" lon="4.415941" name="_KILL5"/>
    <waypoint lat="52.169922" lon="4.425183" name="_KILL6"/>
    <waypoint lat="52.173795" lon="4.423437" name="_KILL7"/>
    <waypoint lat="52.171786" lon="4.416905" name="_HERE"/>
  </waypoints>
  <sectors>
    <sector color="purple" name="Truck">
      <corner name="_T1"/>
      <corner name="_T2"/>
      <corner name="_T3"/>
      <corner name="_T4"/>
    </sector>
    <sector color="green" name="Survey">
      <corner name="D1"/>
      <corner name="D2"/>
      <corner name="D3"/>
      <corner name="D4"/>
      <corner name="D5"/>
    </sector>
    <sector color="orange" name="Flight_Area">
      <corner name="_FLY1"/>
      <corner name="_FLY2"/>
      <corner name="_FLY3"/>
      <corner name="_FLY4"/>
      <corner name="_FLY5"/>
      <corner name="_FLY6"/>
      <corner name="_FLY7"/>
    </sector>
    <sector color="red" name="Kill">
      <corner name="_KILL1"/>
      <corner name="_KILL2"/>
      <corner name="_KILL3"/>
      <corner name="_KILL4"/>
      <corner name="_KILL5"/>
      <corner name="_KILL6"/>
      <corner name="_KILL7"/>
    </sector>
  </sectors>
  <variables>
    <variable init="0" type="int" var="mission_nb"/>
    <variable init="4." max="15." min="0.5" step="0.1" var="drop_height"/>
    <variable init="5." max="15." min="0.5" step="0.1" var="search_height"/>
  </variables>
  <modules>
    <module name="nav" type="survey_rectangle_rotorcraft"/>
    <module name="nav" type="survey_poly_rotorcraft"/>
    <module name="tag_tracking">
      <define name="TAG_TRACKING_SIM_WP" value="WP_DELIVERY"/>
    </module>
  </modules>
  <exceptions>
    <exception cond="(!InsideFlight_Area(GetPosX(), GetPosY()) @OR GetPosAlt() @GT GetAltRef() + 50) 
    @AND (nav_block @GT IndexOfBlock('Standby')) @AND (nav_block @LT IndexOfBlock('Kill landed'))" deroute="Standby"/>
  </exceptions>
  <blocks>
    <block name="Wait GPS">
      <call_once fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call_once fun="NavSetAltitudeReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call_once fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="GetPosHeight() @GT 1.5 @AND mission_nb == DROP_NONE" deroute="Standby"/>
      <exception cond="GetPosHeight() @GT 1.5 @AND mission_nb == DROP_DELIVERY" deroute="Goto Delivery"/>
      <exception cond="GetPosHeight() @GT 1.5 @AND mission_nb == DROP_SILENT" deroute="S4 Drop"/>
      <exception cond="GetPosHeight() @GT 1.5 @AND mission_nb == DROP_UNKNOWN" deroute="S3 Search Setup"/>
      <call_once fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0.1" until="stage_time @GT 2" vmode="throttle"/>
      <call_once fun="NavSetWaypointHere(WP_LANDPAD)"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="LANDPAD"/>
    </block>
    <block name="Standby" pre_call="if(!InsideKill(GetPosX(), GetPosY())) NavKillThrottle();" strip_button="Standby" strip_icon="home.png">
      <set value="DROP_NONE" var="mission_nb"/>
      <stay wp="STDBY"/>
    </block>
    <block group="mission" name="Search Tag" strip_button="Search Tag">
      <call_once fun="jevois_stream(true)"/>
      <call_once fun="nav_survey_rectangle_rotorcraft_setup(WP_D1, WP_D3, 1, NS)"/>
      <deroute block="Search run"/>
    </block>
    <block name="Search run">
      <exception cond="rectangle_survey_sweep_num == 1" deroute="Standby"/>
      <call fun="nav_survey_rectangle_rotorcraft_run(WP_D1, WP_D3)"/>
    </block>
    <block group="mission" name="Start Delivery" strip_button="Delivery">
      <set value="DROP_DELIVERY" var="mission_nb"/>
      <deroute block="Takeoff"/>
    </block>
    <block group="mission" name="S3 Search Start">
      <set value="DROP_UNKNOWN" var="mission_nb"/>
      <deroute block="Takeoff"/>
    </block>
    <block group="mission" name="S3 Search Setup">
      <call_once fun="jevois_stream(true)"/>
      <call_once fun="nav_survey_poly_setup_towards(WP_D1, 5, 10, WP_D2)"/>
      <deroute block="S3 Search"/>
    </block>
    <block group="mission" name="S3 Search">
      <exception cond="(PolySurveySweepBackNum > 0)" deroute="Land"/>
      <call fun="nav_survey_poly_run()"/>
    </block>
    <block group="mission" name="S4 Start Delivery" strip_button="Silent Delivery">
      <set value="DROP_SILENT" var="mission_nb"/>
      <deroute block="Takeoff"/>
    </block>
    <block group="mission" name="S4 Drop" strip_button="Drop Silent">
      <call_once fun="NavSetWaypointHere(WP__HERE)"/>
      <go from="_HERE" height="drop_height" hmode="route" wp="SILENT1"/>
      <stay climb="-1.0" until="GetPosAlt() @LEQ  GetAltRef() + 1.5" vmode="climb" wp="SILENT1"/>
      <go from="SILENT1" height="drop_height - 3.5" hmode="route" wp="SILENT"/>
      <call_once fun="SwitchServoOff()"/>
      <go from="SILENT" height="drop_height" hmode="route" wp="SILENT2"/>
      <go from="SILENT2" hmode="route" wp="LANDPAD"/>
      <deroute block="Land"/>
    </block>
    <block name="Goto Delivery">
      <set value="DROP_NONE" var="mission_nb"/>
      <call_once fun="NavSetWaypointHere(WP__HERE)"/>
      <call_once fun="jevois_stream(false)"/>
      <go from="_HERE" height="drop_height" hmode="route" wp="DELIVERY"/>
      <call_once fun="NavSetWaypointHere(WP_TAG)"/>
      <call_once fun="jevois_stream(true)"/>
      <stay height="drop_height" until="(tag_tracking.status == TAG_TRACKING_RUNNING) @OR (stage_time @GT 15)" wp="DELIVERY"/>
      <deroute block="Drop Package"/>
    </block>
    <block name="Drop Package">
      <stay height="drop_height" until="stage_time @GT 3 @AND tag_tracking.status == TAG_TRACKING_RUNNING" wp="TAG"/>
      <stay climb="-0.5" until="stateGetPositionEnu_f()->z @LT 1.5" vmode="climb" wp="TAG"/>
      <call_once fun="SwitchServoOff()"/>
      <stay height="drop_height" until="stage_time @GT 3" wp="TAG"/>
      <deroute block="Land"/>
    </block>
    <block name="Land here" strip_button="Land here" strip_icon="land-right.png">
      <call_once fun="NavSetWaypointHere(WP_LANDPAD)"/>
    </block>
    <block name="Land">
      <call_once fun="NavSetWaypointHere(WP__HERE)"/>
      <go from="_HERE" hmode="route" wp="LANDPAD"/>
    </block>
    <block name="Flare">
      <exception cond="!nav_is_in_flight()" deroute="Kill landed"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="LANDPAD"/>
    </block>
    <block name="Kill landed">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
