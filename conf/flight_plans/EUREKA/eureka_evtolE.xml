<?xml version="1.0"?>
<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">
<flight_plan alt="272" ground_alt="148" lat0="43.6118793" lon0="1.4551929" max_dist_from_home="30000" name="Rotorcraft Basic (Enac)" security_height="2">
  <header>
#include "autopilot.h"
</header>
  <waypoints>
    <waypoint name="HOME" lat="43.6114243" lon="1.4550410"/>
    <waypoint name="CLIMB" lat="43.6112169" lon="1.4552123"/>
    <waypoint name="STDBY" lat="43.6114105" lon="1.4552123"/>
    <waypoint name="P1" lat="43.6112587" lon="1.4549077"/>
    <waypoint name="P2" lat="43.6104977" lon="1.4526979"/>
    <waypoint name="P3" lat="43.6095707" lon="1.4498740"/>
    <waypoint name="P4" lat="43.6082201" lon="1.4464949"/>
    <waypoint name="P5" lat="43.6062474" lon="1.4414691"/>
    <waypoint name="P6" lat="43.6036559" lon="1.4338477"/>
    <waypoint name="P7" lat="43.6032246" lon="1.4272999"/>
    <waypoint name="P8" lat="43.6046952" lon="1.4217779"/>
    <waypoint name="P9" lat="43.6060691" lon="1.4175234"/>
    <waypoint name="P10" lat="43.6080081" lon="1.4135466"/>
    <waypoint name="P11" lat="43.6116478" lon="1.4080944"/>
    <waypoint name="P12" lat="43.6147011" lon="1.4054333"/>
    <waypoint name="P13" lat="43.6165035" lon="1.4038031"/>
    <waypoint name="P14" lat="43.6211445" lon="1.4015089"/>
    <waypoint name="P15" lat="43.6186561" lon="1.3890239"/>
    <waypoint name="P16" lat="43.6164" lon="1.3868"/>
    <waypoint name="TD" alt="152" lat="43.6155633" lon="1.3864246"/>
    <waypoint name="Parking" alt="152" lat="43.6179783" lon="1.3878711"/>
  </waypoints>
  <blocks>
    <block name="Wait GPS">
      <call_once fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 1)"/>
      <call_once fun="NavSetGroundReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f() @DEREF z @GT 2.0" deroute="Standby"/>
      <call_once fun="NavSetWaypointHere(WP_CLIMB)"/>
      <call_once fun="NavResurrect()"/>
      <stay climb="nav.climb_vspeed" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <stay wp="STDBY"/>
    </block>
    <block name="route1">
      <call_once fun="guidance_h_SetMaxSpeed(23)"/>
      <go from="STDBY" hmode="route" wp="P1"/>
      <path wpts="P1,P2,P3,P4,P5,P6,P7,P8,P9,P10,P11,P12,P13,P14,P15,P16"/>
      <deroute block="land"/>
    </block>
    <block name="goto END">
      <go wp="P16"/>
      <deroute block="land"/>
    </block>
    <block name="land here" strip_button="Land Here" strip_icon="land-right.png">
      <call_once fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <call_once fun="guidance_h_SetMaxSpeed(12)"/>
      <go wp="TD" height="2"/>
      <stay wp="TD" height="2"/>
    </block>
    <block name="park">
      <call_once fun="guidance_h_SetMaxSpeed(4)"/>
      <go wp="Parking" height="2"/>
      <stay wp="Parking" height="2"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call_once fun="NavStartDetectGround()"/>
      <stay climb="nav.descend_vspeed" vmode="climb" wp="TD"/>
    </block>
    <block name="landed">
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
