<?xml version="1.0"?>
<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">
<flight_plan alt="302" ground_alt="152" lat0="43.6086362" lon0="1.4009029" max_dist_from_home="30000" name="Rotorcraft Basic (Enac)" security_height="2">
  <header>
#include "autopilot.h"
</header>
  <waypoints>
    <waypoint name="HOME" lat="43.6086362" lon="1.4009029"/>
    <waypoint name="CLIMB" lat="43.6086353" lon="1.4009057"/>
    <waypoint name="STDBY" lat="43.6085793" lon="1.4009670"/>
    <waypoint name="P1" lat="43.6133460" lon="1.4060923"/>
    <waypoint name="P2" lat="43.6066275" lon="1.4163286"/>
    <waypoint name="P3" lat="43.6029288" lon="1.4306145"/>
    <waypoint name="P4" lat="43.6007652" lon="1.4378369"/>
    <waypoint name="P5" lat="43.5960000" lon="1.4389503"/>
    <waypoint name="P6" lat="43.5860272" lon="1.4308816"/>
    <waypoint name="P7" lat="43.5810175" lon="1.4282771"/>
    <waypoint name="P8" lat="43.5762919" lon="1.4290710"/>
    <waypoint name="P9" lat="43.5743141" lon="1.4351633"/>
    <waypoint name="P10" lat="43.5702159" lon="1.4387107"/>
    <waypoint name="P11" lat="43.5673332" lon="1.4387604"/>
