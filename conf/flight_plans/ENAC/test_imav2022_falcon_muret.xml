<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="235" ground_alt="185" lat0="43.4625" lon0="1.27288" max_dist_from_home="500" name="Muret safety" security_height="1">
  <header>
    #ifndef SwitchServoOn
    #define SwitchServoOn(_x) {}
    #endif
    #ifndef SwitchServoOff
    #define SwitchServoOff(_x) {}
    #endif
    #define DropOpen SwitchServoOff
    #define DropClose SwitchServoOn

    #define DROP_NONE       0
    #define RUN_TRACK       1

  </header>
  <waypoints>
    <waypoint name="HOME" x="40.256" y="59.629"/>
    <waypoint name="STDBY" x="-8.6" y="1.9"/>
    <waypoint name="LANDPAD" x="-19.9" y="-4.5"/>
    <waypoint name="DELIVERY" x="-1.4" y="35.8"/>
    <waypoint name="O1" x="-118.5" y="56.5"/>
    <waypoint name="O2" x="-114.4" y="146.6"/>
    <waypoint name="O3" x="188.7" y="125.2"/>
    <waypoint name="O4" x="190.2" y="33.1"/>
    <waypoint name="P1" x="-91.1" y="93.3"/>
    <waypoint name="P2" x="159.3" y="76.1"/>
    <waypoint name="_FLY1" x="-215.2" y="236.4"/>
    <waypoint name="_FLY2" x="363.4" y="200.4"/>
    <waypoint name="_FLY3" x="333.9" y="-66.7"/>
    <waypoint name="_FLY4" x="-228.5" y="-28.1"/>
    <waypoint name="_KILL1" x="-254.3" y="264.2"/>
    <waypoint name="_KILL2" x="398.3" y="229.3"/>
    <waypoint name="_KILL3" x="368.6" y="-110.1"/>
    <waypoint name="_KILL4" x="-266.2" y="-55.5"/>
    <waypoint name="_HERE" x="6.0" y="-1.2"/>
  </waypoints>
  <sectors>
    <sector color="orange" name="Flight_Area">
      <corner name="_FLY1"/>
      <corner name="_FLY2"/>
      <corner name="_FLY3"/>
      <corner name="_FLY4"/>
    </sector>
    <sector color="red" name="Kill">
      <corner name="_KILL1"/>
      <corner name="_KILL2"/>
      <corner name="_KILL3"/>
      <corner name="_KILL4"/>
    </sector>
  </sectors>
  <variables>
    <variable init="0" type="int" var="mission_nb"/>
    <variable init="50." var="goto_height" min="0.5" max="45." step="0.1"/>
    <variable init="1.5" var="drop_height" min="0.5" max="15." step="0.1"/>
    <variable init="10." var="land_height" min="0.5" max="20." step="0.1"/>
  </variables>
  <!--exceptions>
    <exception cond="(!InsideFlight_Area(GetPosX(), GetPosY()) @OR GetPosAlt() @GT GetAltRef() + 50) @AND (nav_block @GT IndexOfBlock('Standby')) @AND (nav_block @LT IndexOfBlock('Kill landed'))" deroute="Standby"/>
    <exception cond="(!InsideKill(GetPosX(), GetPosY()) @OR GetPosAlt() @GT GetAltRef() + 55) @AND (nav_block == IndexOfBlock('Standby'))" deroute="Kill landed"/>
  </exceptions-->
  <blocks>
    <block name="Wait GPS">
      <call_once fun="NavKillThrottle()"/>
      <call_once fun="DropOpen()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
    </block>
    <block name="Holding point">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call_once fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="GetPosHeight() @GT 4. @AND mission_nb == DROP_NONE" deroute="Standby"/>
      <exception cond="GetPosHeight() @GT 4. @AND mission_nb == RUN_TRACK" deroute="Run Track"/>
      <call_once fun="ins_reset_vertical_pos()"/>
      <call_once fun="DropClose()"/>
      <call_once fun="NavResurrect()"/>
      <set value="false" var="force_forward"/>
      <attitude pitch="0" roll="0" throttle="0.1" until="stage_time @GT 2" vmode="throttle"/>
      <call_once fun="NavSetWaypointHere(WP_LANDPAD)"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="LANDPAD"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <set value="false" var="force_forward"/>
      <set var="mission_nb" value="DROP_NONE"/>
      <stay wp="STDBY"/>
    </block>

    <block group="track" name="Track" strip_button="Track and Drop">
      <set var="mission_nb" value="RUN_TRACK"/>
      <deroute block="Takeoff"/>
    </block>

    <block name="Run Track">
      <set var="mission_nb" value="DROP_NONE"/>
      <!-- exception cond="electrical.bat_low" deroute="Goto Delivery"/-->
      <call_once fun="NavSetWaypointHere(WP__HERE)"/>
      <set value="true" var="force_forward"/>
      <go wp="O1" from="_HERE" hmode="route" height="goto_height"/>
      <!--for var="i" from="1" to="3"-->
      <while cond="!electrical.bat_low">
        <go from="O1" wp="O2" hmode="route" height="goto_height"/>
        <go from="O2" wp="O3" hmode="route" height="goto_height"/>
        <go from="O3" wp="O4" hmode="route" height="goto_height"/>
        <go from="O4" wp="O1" hmode="route" height="goto_height"/>
      </while>
      <go from="O1" wp="O2" hmode="route" height="goto_height"/>
      <!-- for/-->
      <deroute block="Goto Delivery"/>
    </block>

    <block name="Goto Delivery" strip_button="Goto Delivery" group="track">
      <call_once fun="NavSetWaypointHere(WP__HERE)"/>
      <set value="true" var="force_forward"/>
      <go wp="DELIVERY" from="_HERE" hmode="route" height="goto_height"/>
      <set value="false" var="force_forward"/>
      <stay wp="DELIVERY" height="goto_height" until="stage_time @GT 10"/>
      <deroute block="Drop Package"/>
    </block>

    <block name="Drop Package">
      <stay wp="DELIVERY" climb="-1.5" vmode="climb" until="GetPosHeight() @LT drop_height"/>
      <!--call_once fun="DropOpen()"/-->
      <stay wp="DELIVERY" until="stage_time @GT 3" height="land_height"/>
      <deroute block="Land"/>
    </block>

    <block name="Land here" strip_button="Land here" strip_icon="land-right.png" group="land">
      <call_once fun="NavSetWaypointHere(WP_LANDPAD)"/>
    </block>
    <block name="Land" strip_button="Land on pad" group="land">
      <call_once fun="NavSetWaypointHere(WP__HERE)"/>
      <set value="false" var="force_forward"/>
      <go wp="LANDPAD" from="_HERE" hmode="route" height="land_height"/>
    </block>
    <block name="Flare">
      <exception cond="!nav_is_in_flight()" deroute="Kill landed"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="LANDPAD"/>
    </block>
    <block name="Kill landed">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>

  </blocks>

</flight_plan>
