  <section name="NAV">
    <define name="NAV_CLIMB_VSPEED" value="1.5"/>
    <define name="NAV_DESCEND_VSPEED" value="-1.5"/>
  </section>

  <section prefix="AHRS_" name="AHRS">
    <!-- <define name="H_X" value="0.5138"/> -->
