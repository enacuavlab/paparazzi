<!DOCTYPE airframe SYSTEM "../../airframe.dtd">

<airframe name="Ryzen Tello">

  <firmware name="rotorcraft">
    <autopilot name="tello.xml"/>

    <target name="ap" board="tello">
    </target>

    <module name="radio_control"  type="datalink"/>
    <module name="telemetry"      type="transparent_udp"/>
    <module name="gps"            type="ublox">
      <configure name="GPS_BAUD" value="B115200"/>
    </module>
    <module name="ins"            type="gps_passthrough">
      <configure name="USE_MAGNETOMETER" value="FALSE"/>
      <define name="AHRS_USE_GPS_HEADING" value="TRUE"/>
      <define name="AHRS_HEADING_UPDATE_GPS_MIN_SPEED" value="0"/>
      <define name="USE_SONAR" value="0"/>
    </module>
    <module name="nav" type="basic_rotorcraft"/>
    <module name="air_data"/>
  </firmware>

  <commands>
    <axis name="SPEED_X"  failsafe_value="0"/>
    <axis name="SPEED_Y"  failsafe_value="0"/>
    <axis name="SPEED_Z"  failsafe_value="0"/>
    <axis name="YAW_RATE" failsafe_value="0"/>
  </commands>

