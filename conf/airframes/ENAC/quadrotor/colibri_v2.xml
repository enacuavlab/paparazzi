        <define name="CE_YAW_A" value="0.045"/> 
      </module> -->

      <!--Switch advanced INDI scheduling functions on or off-->
      <define name="INDI_FUNCTIONS_RC_CHANNEL" value="6"/>
      <define name="USE_ADC_1"/>
      <define name="ADC_CHANNEL_VSUPPLY" value="ADC_1"/>

      <!-- description="pressure range in psi (default: 1)"-->
      <!--description="set to 0 for output type A, to 1 for output type B (default: type A)"/>-->
      <!--description="flag to enable sending every new measurement via telemetry (default:FALSE)-->
      <!--description="pressure scaling factor to convert raw output to Pa (default: set according to pressure range and output type according to datasheet)"-->
      <!-- 8507.3 (positive gcs, increase xml) description="pressure offset in Pa (default: set according to pressure range and output type according to datasheet)-->
      <!--description="Time constant for second order Butterworth low pass filter"-->
      <!--description="Set airspeed in state interface for this sensor" -->
      <module name="airspeed" type="ms45xx_i2c">
        <define name="USE_I2C2"/>
        <define name="MS45XX_I2C_DEV" value="i2c2"/>
        <define name="MS45XX_PRESSURE_RANGE" value="1" />
        <define name="MS45XX_OUTPUT_TYPE" value="0"/> 
        <define name="MS45XX_SYNC_SEND" value="TRUE" /> 
        <define name="MS45XX_PRESSURE_SCALE" value="1.052"/> 
        <define name="MS45XX_PRESSURE_OFFSET" value="8579.2" />
        <define name="MS45XX_LOWPASS_TAU" value="0.05"/> 
        <define name="USE_AIRSPEED_MS45XX" value="TRUE"/> 
      </module>
     
      
    </target>

