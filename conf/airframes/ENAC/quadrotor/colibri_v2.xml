    <set servo="RINT" value="autopilot.motors_on ? actuators_pprz[1] : -MAX_PPRZ" />
    <set servo="LEXT" value="autopilot.motors_on ? actuators_pprz[2] : -MAX_PPRZ" />
    <set servo="LINT" value="autopilot.motors_on ? actuators_pprz[3] : -MAX_PPRZ" />
    <set servo="ELEVON_L" value="autopilot.motors_on ? actuators_pprz[4] : 0" />
    <set servo="ELEVON_R" value="autopilot.motors_on ? actuators_pprz[5] : 0" />
    <set servo="PROFONDEUR_SERVO" value="autopilot.motors_on ? actuators_pprz[6] : 0" />
    <set servo="PROFONDEUR_MOTOR" value="autopilot.motors_on ? actuators_pprz[7] : -MAX_PPRZ" />
  </command_laws>

