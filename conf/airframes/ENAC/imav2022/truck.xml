<!DOCTYPE airframe SYSTEM "../../airframe.dtd">

<airframe name="Truck IMAV2022">
  <description>
    Dummy autopilot to follow the IMAV2022 truck
  </description>

  <firmware name="rover">
    <autopilot name="rover_steering"/>

    <define name="IMU_MPU9250_READ_MAG" value="0"/>

    <target name="ap" board="apogee_1.0_chibios">
    </target>
    <target name="nps" board="pc">
      <module name="fdm" type="rover"/>
      <define name="NPS_BYPASS_AHRS" value="TRUE"/>
      <define name="NPS_BYPASS_INS"  value="TRUE"/>
    </target>

    <module name="radio_control"  type="datalink"/>
    <module name="actuators"      type="pwm"/>

    <module name="telemetry"      type="xbee_api"/>
    <module name="imu"            type="apogee"/>
    <module name="gps"            type="ublox"/>
    <configure name="GPS_BAUD" value="B115200"/>

    <module name="ins"  type="gps_passthrough"/>
    <define name="INS_GP_USE_GPS_ACCEL" value="TRUE"/>
    <module name="ahrs" type="float_dcm">
      <define name="AHRS_FLOAT_MIN_SPEED_GPS_COURSE" value="0.1"/>
    </module>

    <module name="nav" type="rover_base"/>
    <module name="guidance" type="rover_steering"/>
    <module name="gvf_module"/>
  </firmware>

  <servos> 
    <servo name="MOTOR_THROTTLE" no="1" min="1000" neutral="1500" max="2000"/>
    <servo name="MOTOR_STEERING" no="2" min="1000" neutral="1500" max="2000"/>
  </servos> 

  <commands>
    <axis name="THROTTLE" failsafe_value="0"/>
    <axis name="STEERING"  failsafe_value="0"/>
  </commands>

  <rc_commands>
    <set command="THROTTLE" value="@THROTTLE"/>
    <set command="STEERING"  value="@ROLL"/>
  </rc_commands>

  <command_laws>
    <set servo="MOTOR_THROTTLE" value="@THROTTLE"/>
    <set servo="MOTOR_STEERING" value="@STEERING"/>
  </command_laws>

  <section name="IMU" prefix="IMU_">
    <define name="GYRO_P_SIGN" value="1"/>
    <define name="GYRO_Q_SIGN" value="-1"/>
    <define name="GYRO_R_SIGN" value="-1"/>
    <define name="ACCEL_X_SIGN" value="1"/>
    <define name="ACCEL_Y_SIGN" value="-1"/>
    <define name="ACCEL_Z_SIGN" value="-1"/>

    <!-- MPU MAG -->
    <define name="MAG_X_SIGN" value="1"/>
    <define name="MAG_Y_SIGN" value="-1"/>
    <define name="MAG_Z_SIGN" value="-1"/>
    <define name="MAG_X_NEUTRAL" value="-53"/>
    <define name="MAG_Y_NEUTRAL" value="-17"/>
    <define name="MAG_Z_NEUTRAL" value="-29"/>
    <define name="MAG_X_SENS" value="14.1339051912" integer="16"/>
    <define name="MAG_Y_SENS" value="15.9334896814" integer="16"/>
    <define name="MAG_Z_SENS" value="15.9429325263" integer="16"/>

    <define name="BODY_TO_IMU_PHI"   value="0." unit="deg"/>
    <define name="BODY_TO_IMU_THETA" value="0." unit="deg"/>
    <define name="BODY_TO_IMU_PSI"   value="0." unit="deg"/>
  </section>

  <section name="AHRS" prefix="AHRS_">
    <!-- values used if no GPS fix, on 3D fix is update by geo_mag module if loaded -->
    <!-- Toulouse -->
    <define name="H_X" value="0.513081"/>
    <define name="H_Y" value="-0.00242783"/>
    <define name="H_Z" value="0.858336"/>
  </section>

  <section name="ROVER_GUIDANCE" prefix="ROVER_GUIDANCE_">
    <define name="SPEED_PGAIN" value="0.1"/>
    <define name="SPEED_DGAIN" value="0.1"/>
    <define name="SPEED_IGAIN" value="0."/>
    <define name="TURN_PGAIN" value="0.1"/>
    <define name="TURN_DGAIN" value="0.1"/>
    <define name="TURN_IGAIN" value="0."/>
  </section>

  <section name="ROVER_STEERING">
    <define name="MAX_DELTA"            value="15.0"/>
    <define name="DRIVE_SHAFT_DISTANCE" value="0.25"/>
    <define name="SR_MEASURED_KF"       value="1400.0"/>
  </section>

  <section name="SIMULATOR" prefix="NPS_">
    <define name="SENSORS_PARAMS" value="nps_sensors_params_default.h" type="string"/>
  </section>

  <section name="AUTOPILOT">
    <define name="MODE_MANUAL" value="AP_MODE_DIRECT"/> <!-- for compilation -->
    <define name="MODE_AUTO1"  value="AP_MODE_CRUISER"/> <!-- for compilation -->
    <define name="MODE_AUTO2"  value="AP_MODE_NAV"/>
  </section>

  <section name="BAT">
    <define name="CATASTROPHIC_BAT_LEVEL" value="6.2" unit="V"/>
    <define name="CRITIC_BAT_LEVEL" value="6.3" unit="V"/>
    <define name="LOW_BAT_LEVEL" value="6.4" unit="V"/>
    <define name="MAX_BAT_LEVEL" value="7.4" unit="V"/>
  </section>

  <section name="GCS">
    <define name="AC_ICON" value="rover"/>
  </section>

</airframe>
